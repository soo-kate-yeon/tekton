{
  "name": "@tekton/token-contract",
  "version": "0.1.0",
  "description": "Token Contract & CSS Variable System with Zod validation and curated themes",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schemas": {
      "types": "./dist/schemas/index.d.ts",
      "import": "./dist/schemas/index.js"
    },
    "./themes": {
      "types": "./dist/themes/index.d.ts",
      "import": "./dist/themes/index.js"
    },
    "./css-generator": {
      "types": "./dist/css-generator/index.d.ts",
      "import": "./dist/css-generator/index.js"
    },
    "./theme-provider": {
      "types": "./dist/theme-provider/index.d.ts",
      "import": "./dist/theme-provider/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "zod": "^3.23.8"
  },
  "peerDependencies": {
    "react": "^19.0.0"
  },
  "devDependencies": {
    "@tekton/theme": "workspace:*",
    "@tekton/token-generator": "workspace:*",
    "@testing-library/react": "^16.1.0",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.6",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "react": "^19.0.0",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "keywords": [
    "design-tokens",
    "token-contract",
    "css-variables",
    "theme",
    "zod",
    "validation",
    "oklch",
    "wcag"
  ],
  "author": "Tekton Team",
  "license": "MIT"
}
