{
  "name": "tekton-vscode",
  "displayName": "Tekton Design System",
  "description": "VS Code extension for Tekton OKLCH design token generator",
  "version": "0.1.0",
  "publisher": "tekton",
  "engines": {
    "vscode": "^1.95.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Other",
    "Formatters"
  ],
  "activationEvents": [
    "onCommand:tekton.detectStack",
    "onCommand:tekton.setupShadcn",
    "onCommand:tekton.generateTokens"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tekton.detectStack",
        "title": "Tekton: Detect Framework Stack"
      },
      {
        "command": "tekton.setupShadcn",
        "title": "Tekton: Setup shadcn/ui"
      },
      {
        "command": "tekton.generateTokens",
        "title": "Tekton: Generate Design Tokens"
      }
    ]
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "build": "node esbuild.config.mjs",
    "dev": "node esbuild.config.mjs --watch",
    "package": "pnpm build && vsce package",
    "lint": "eslint src tests --ext .ts"
  },
  "dependencies": {
    "execa": "^9.5.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/vscode": "^1.95.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.1",
    "esbuild": "^0.24.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
