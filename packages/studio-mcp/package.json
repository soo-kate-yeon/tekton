{
  "name": "@tekton/mcp-server",
  "version": "1.0.0",
  "description": "Tekton MCP Server - AI-powered design system tools for any project. Works standalone or connected to Tekton Studio.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./server": {
      "import": "./dist/server/index.js",
      "types": "./dist/server/index.d.ts"
    }
  },
  "bin": {
    "tekton-mcp": "./dist/server/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage --coverage.reporter=html --coverage.reporter=text --coverage.reporter=json",
    "build": "tsc",
    "dev": "tsc && nodemon --watch src --ext ts --exec 'tsc && node ./dist/server/index.js'",
    "start": "node ./dist/server/index.js",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@tekton/component-system": "workspace:*",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.18.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.53.0",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "design-system",
    "ai-tools",
    "tekton",
    "component",
    "component-generation",
    "theme",
    "styling"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tekton-design/tekton.git",
    "directory": "packages/studio-mcp"
  },
  "homepage": "https://tekton.design",
  "bugs": {
    "url": "https://github.com/tekton-design/tekton/issues"
  },
  "license": "MIT",
  "author": "Tekton Design"
}
