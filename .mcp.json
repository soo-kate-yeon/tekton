{
  "mcpServers": {
    "context7": {
      "$comment": "Cross-platform MCP configuration - see .mcp.windows.json for Windows",
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp@latest"
      ]
    },
    "tekton-studio": {
      "command": "node",
      "args": [
        "packages/studio-mcp/dist/index.js"
      ],
      "env": {
        "STUDIO_API_URL": "http://localhost:8000"
      }
    }
  },
  "staggeredStartup": {
    "enabled": true,
    "delayMs": 500,
    "connectionTimeout": 15000
  }
}