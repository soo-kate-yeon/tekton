{
  "mcpServers": {
    "context7": {
      "$comment": "Cross-platform MCP configuration - see .mcp.windows.json for Windows",
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp@latest"
      ]
    },
    "tekton-mcp": {
      "command": "node",
      "args": [
        "packages/mcp-server/dist/index.js"
      ]
    }
  },
  "staggeredStartup": {
    "enabled": true,
    "delayMs": 500,
    "connectionTimeout": 15000
  }
}