{
  "name": "tekton",
  "version": "0.1.0",
  "description": "OKLCH-based design token generator with WCAG AA compliance",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:all": "pnpm --filter \"./packages/*\" test",
    "test:a11y": "playwright test",
    "test:a11y:ui": "playwright test --ui",
    "test:a11y:debug": "playwright test --debug",
    "test:a11y:report": "playwright show-report playwright-report",
    "ci:test": "vitest run --coverage --reporter=verbose",
    "build": "tsc",
    "build:all": "pnpm --filter \"./packages/*\" build",
    "dev": "tsc --watch",
    "lint": "eslint src tests --ext .ts",
    "lint:all": "pnpm --filter \"./packages/*\" lint",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "keywords": [
    "design-tokens",
    "oklch",
    "color",
    "wcag",
    "accessibility",
    "design-system"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.58.0",
    "@types/culori": "^4.0.1",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitest/coverage-v8": "^2.1.8",
    "axe-core": "^4.11.1",
    "eslint": "^9.18.0",
    "globals": "^17.0.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8",
    "yaml": "^2.8.2"
  },
  "dependencies": {
    "zod": "^3.23.8"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
